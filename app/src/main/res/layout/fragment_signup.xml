<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FragmentClass.SignupFrag">

    <TextView
        android:id="@+id/tview_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/card_signup"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Signup Form"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="9dp"
        app:cardElevation="9dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/signup_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Username"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/signup_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/signup_username"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/signup_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/signup_name"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/signup_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/signup_email"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/signup_address"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_below="@id/signup_phone"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="left"
                        android:hint="Home Address"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#000" />

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/signup_address"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="10dp"
                        android:background="#000" />

                    <EditText
                        android:id="@+id/signup_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view_1"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/signup_password_verify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/signup_password"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Password Verification"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/btn_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/signup_password_verify"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_button"
                        android:text="Signup"
                        android:textAllCaps="false"
                        android:textColor="#f5f5f5" />

                    <Button
                        android:id="@+id/btn_login_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/signup_password_verify"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/btn_signup"
                        android:background="@drawable/rounded_button"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="#f5f5f5" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>



    </androidx.cardview.widget.CardView>


</RelativeLayout>